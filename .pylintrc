[MASTER]
# Ignorer les dossiers tiers
ignore=libs,build,dist,__pycache__,.git

# Utiliser plusieurs processus pour accélérer Pylint
jobs=4

[MESSAGES CONTROL]
# Désactiver certains messages non pertinents pour ce projet
disable=
    C0111,  # missing-docstring
    C0103,  # invalid-name
    R0913,  # too-many-arguments
    R0914,  # too-many-locals
    W0703,  # broad-except (nécessaire pour la robustesse)
    C0301,  # line-too-long (géré par Black)

[FORMAT]
# Longueur maximale de ligne
max-line-length=120

[DESIGN]
# Limites de complexité
max-args=10
max-locals=20
max-branches=15
max-statements=60

[BASIC]
# Conventions de nommage
good-names=i,j,k,ex,Run,_,e,f,d,s

[SIMILARITIES]
# Minimum de lignes similaires
min-similarity-lines=10
