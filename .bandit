# Configuration Bandit pour 5GHz Cleaner
# Exclure les faux positifs et configurer l'analyse de sécurité

[bandit]
# Exclure les dossiers tiers et build
exclude_dirs = ['/libs', '/build', '/dist', '/__pycache__', '/.git']

# Tests à ignorer (avec justification)
skips = []

# Niveau de sévérité minimum
severity = medium

# Niveau de confiance minimum
confidence = medium

# Tests spécifiques
tests = []

# Exclure les fichiers de test
exclude = */test_*.py,*/tests/*
