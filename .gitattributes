# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf
*.pyw text eol=lf
*.pyx text eol=lf
*.pxd text eol=lf

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf

# PowerShell scripts
*.ps1 text eol=crlf
*.psm1 text eol=crlf
*.psd1 text eol=crlf

# Batch files
*.bat text eol=crlf
*.cmd text eol=crlf

# Documentation
*.md text eol=lf
*.txt text eol=lf
*.rst text eol=lf

# Configuration files
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.ini text eol=lf
*.cfg text eol=lf

# Git files
.gitattributes text eol=lf
.gitignore text eol=lf
.gitmodules text eol=lf

# Binary files
*.exe binary
*.dll binary
*.so binary
*.dylib binary
*.pyd binary
*.pyc binary
*.pyo binary

# Images
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary

# Archives
*.zip binary
*.tar binary
*.gz binary
*.bz2 binary
*.7z binary

# Certificates (should not be in repo anyway)
*.pfx binary
*.p12 binary
*.cer binary
*.crt binary
*.pem binary

# Database files
*.db binary
*.sqlite binary
*.sqlite3 binary

# Linguist overrides for better language detection
*.md linguist-detectable
*.py linguist-language=Python
Documentations/** linguist-documentation
tests/** linguist-vendored=false
scripts/** linguist-vendored=false

# Export ignore (files not included in archives)
.gitattributes export-ignore
.gitignore export-ignore
.github/ export-ignore
tests/ export-ignore
*.pyc export-ignore
__pycache__/ export-ignore
.pytest_cache/ export-ignore
*.egg-info/ export-ignore
dist/ export-ignore
build/ export-ignore
