# ============================================================================
# .env.example - Configuration de l'application 5GH'z Cleaner
# ============================================================================
# Copier ce fichier en .env et ajuster les valeurs selon vos besoins
# Ne JAMAIS commiter le fichier .env (contient des données sensibles)

# ============================================================================
# MODE DEBUG
# ============================================================================
# Active le mode debug avec logs détaillés
# Valeurs: true, false
DEBUG=false

# ============================================================================
# LOGGING
# ============================================================================
# Niveau de log (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Chiffrement AES-256 des logs (recommandé en production)
# Valeurs: true, false
ENABLE_LOG_ENCRYPTION=true

# Durée de conservation des logs (jours)
LOG_RETENTION_DAYS=30

# Taille maximale d'un fichier log (MB)
MAX_LOG_SIZE_MB=100

# ============================================================================
# SÉCURITÉ
# ============================================================================
# Vérification d'intégrité SHA256 des modules critiques
# Valeurs: true, false
ENABLE_INTEGRITY_CHECK=true

# Protection DLL Hijacking sur Windows
# Valeurs: true, false
ENABLE_DLL_PROTECTION=true

# ============================================================================
# RÉSEAU
# ============================================================================
# Timeout pour les opérations réseau (secondes)
NETWORK_TIMEOUT=30

# Timeout pour les téléchargements (secondes)
DOWNLOAD_TIMEOUT=60

# ============================================================================
# CACHE & PERFORMANCE
# ============================================================================
# Taille maximale du cache en mémoire (MB)
MAX_CACHE_SIZE_MB=100

# Durée de vie du cache (secondes)
CACHE_TTL=300

# Nombre de workers pour scan parallèle
PARALLEL_WORKERS=4

# ============================================================================
# MONITORING MATÉRIEL
# ============================================================================
# Activer le monitoring matériel (CPU, RAM, GPU, températures)
# Valeurs: true, false
ENABLE_HARDWARE_MONITORING=true

# Intervalle de mise à jour du monitoring (secondes)
MONITORING_INTERVAL=2

# ============================================================================
# INTERFACE UTILISATEUR
# ============================================================================
# Thème de l'interface (dark, light)
UI_THEME=dark

# Langue de l'interface (fr, en)
UI_LANGUAGE=fr

# ============================================================================
# NETTOYAGE
# ============================================================================
# Créer un backup avant suppression de fichiers
# Valeurs: true, false
ENABLE_BACKUP_BEFORE_DELETE=true

# Durée de conservation des backups (jours)
BACKUP_RETENTION_DAYS=7

# ============================================================================
# AVANCÉ
# ============================================================================
# Créer un point de restauration système avant nettoyage
# Valeurs: true, false
CREATE_RESTORE_POINT=true

# Espace disque minimum requis pour point de restauration (GB)
MIN_DISK_SPACE_FOR_RESTORE=10
